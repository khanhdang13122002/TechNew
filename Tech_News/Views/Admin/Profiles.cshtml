@model Tech_News.Models.DAO.AdminViewModel
@{
    ViewBag.Title = "Profiles";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@if (Model != null) {
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Profile page</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <div class="d-md-flex">
                    <ol class="breadcrumb ms-auto">
                        <li><a href="#" class="fw-normal">Dashboard</a></li>
                    </ol>

                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        @using (Html.BeginForm("Profiles", "Admin", FormMethod.Post))
        {

        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-12" style="cursor:pointer;">
                
                <div class="white-box" id="choseImg">
                    <div class="user-bg">
                        <img width="100%" alt="user" src="@if (Model.single_user.avatar != null) { @Url.Content(Model.single_user.avatar);} else { Url.Content(" ");} ">
                        <div class="overlay-box">
                            <div class="user-content">
                                <a href="javascript:void(0)" >
                                    <img src="@if (Model.single_user.avatar != null) { @Url.Content(Model.single_user.avatar);} else { Url.Content(" ");} "
                                         class="thumb-lg img-circle" alt="img">
                                </a>
                                <h4 class="text-white mt-2">@Model.single_user.UserName</h4>
                                <h5 class="text-white mt-2">@Model.single_user.Email</h5>
                            </div>
                        </div>
                    </div>
                </div>
               @Html.TextBoxFor(model=>model.single_user.avatar,new{@type = "file",@class = "btn btn-info form-control text-white"})
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material">
                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Full Name</label>
                                <div class="col-md-12 border-bottom p-0">
                                    @Html.TextBoxFor(m => m.single_user.UserName, new { @class = "form-control p-0 border-0", @type = "text", @placeholder = "UserName", @value = "@Model.single_user.UserName" })
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label for="example-email" class="col-md-12 p-0">Email</label>
                                <div class="col-md-12 border-bottom p-0">
                                    @Html.TextBoxFor(m => m.single_user.Email, new { @class = "form-control p-0 border-0", @type = "text", @placeholder = "Email", @value = "@Model.single_user.Email" })
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label for="example-email" class="col-md-12 p-0">Email</label>
                                <div class="col-md-12 border-bottom p-0">
                                    @Html.TextBoxFor(m => m.single_user.PasswordHash, new { @class = "form-control p-0 border-0", @type = "password", @placeholder = "Password", @value = "@Model.single_user.PasswordHash" })
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Phone No</label>
                                <div class="col-md-12 border-bottom p-0">
                                    @Html.TextBoxFor(m => m.single_user.PhoneNumber, new { @class = "form-control p-0 border-0", @type = "text", @placeholder = "Number Phone", @value = "@Model.single_user.PhoneNumber" })
                                </div>
                            </div>
                            
                            <div class="form-group mb-4">
                                <div class="col-sm-12">
                                    <button class="btn btn-success text-white">Update Profile</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
        <!-- Row -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
        }
    </div>

</div>
}
<script>
    var imgbox = document.getElementById("choseImg");
    imgbox.onclick = () => {
        
    }
</script>