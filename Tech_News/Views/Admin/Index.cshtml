@model Tech_News.Models.DAO.AdminViewModel
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    int count = 1;
}
@if (Model != null)
{
    <span id="totalUsers" data-value="@Model.Total_User"></span>
    <span id="totalArticles" data-value="@Model.Total_Articles"></span>
    <span id="totalComments" data-value="@Model.Total_Comment"></span>


    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Dashboard</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">
                        <ol class="breadcrumb ms-auto">
                            <li><a href="#" class="fw-normal">Dashboard</a></li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Three charts -->
            <!-- ============================================================== -->
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Total Articles</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ms-auto"><span class="counter text-success">@Model.Total_Articles</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Total Users</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash2">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ms-auto"><span class="counter text-purple">@Model.Total_User</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Total Comments</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash3">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ms-auto">
                                <span class="counter text-info">@Model.Total_Comment</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- PRODUCTS YEARLY SALES -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                    <div class="white-box">
                        <h3 class="box-title">Analytics</h3>
                        <div class="d-md-flex">
                            <ul class="list-inline d-flex ms-auto">

                                <li class="ps-3">
                                    <h5><i class="fa fa-circle me-1 text-info"></i>User</h5>
                                </li>
                                <li class="ps-3">
                                    <h5><i class="fa fa-circle me-1 text-inverse"></i>Article</h5>
                                </li>
                                <li class="ps-3">
                                    <h5><i class="fa fa-circle me-1" style="color: #f4c63d!important;"></i>Comments</h5>
                                </li>
                            </ul>
                        </div>
                        <div id="ct-visits" style="height: 405px;">
                            <div class="chartist-tooltip" style="top: -17px; left: -12px;">
                                <span class="chartist-tooltip-value">6</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- RECENT SALES -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                    <div class="white-box">
                        <div class="d-md-flex mb-3">
                            <h3 class="box-title mb-0">Recent Articles</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table no-wrap">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">#</th>
                                        <th class="border-top-0">Title</th>
                                        <th class="border-top-0">Views</th>
                                        <th class="border-top-0 text-center">Comments</th>
                                        <th class="border-top-0">Updated</th>
                                        <th class="border-top-0 text-center">View On Web</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var article in Model.Re_Articles)
                                    {
                                    <tr>
                                        <td>@count</td>
                                        <td class="txt-oflo">@article.article_title</td>
                                        <td>@article.view.total_view</td>
                                        <td class="txt-oflo text-center">@article.comments.Count()</td>
                                        <td><span class="text-success">@article.update_at.ToString()</span></td>
                                        <td class="text-center"><a href="@Url.Action("Index", "NewDetails", new { id = article.id })"><span class="fa fa-eye"></span></a></td>

                                    </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- Recent Comments -->
            <!-- ============================================================== -->
            <div class="row">
                <!-- .col -->
                <div class="col-md-12 col-lg-8 col-sm-12">
                    <div class="card white-box p-0">
                        <div class="card-body">
                            <h3 class="box-title mb-0">Recent Comments</h3>
                        </div>
                        <div class="comment-widgets">
                            @foreach (var cmt in Model.Re_Comments)
                            {
                                <div class="d-flex flex-row comment-row p-3">
                                    <div class="p-2"><img src="@if (cmt.user.avatar != null) { Url.Content(cmt.user.avatar); } else { Url.Content(" ");} " alt="user" width="50" class="rounded-circle"></div>
<div class="comment-text ps-2 ps-md-3 w-100">
                                        <h5 class="font-medium">@cmt.user.UserName</h5>
                                        <span class="mb-3 d-block">@cmt.comment_content</span>
                                        <div class="comment-footer d-md-flex align-items-center">

                                            <span class="badge rounded bg-danger">Rejected</span>

                                            <div class="text-muted fs-2 ms-auto mt-2 mt-md-0">@cmt.update_at</div>
                                        </div>
                                    </div>
                                </div>
                             }
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="card white-box p-0">
                        <div class="card-heading">
                            <h3 class="box-title mb-0">Chat Listing</h3>
                        </div>
                        <div class="card-body">
                            <ul class="chatonline">
                                @foreach (var us in Model.Re_Users)
                                {
                                    <li>
                                        <div class="call-chat">
                                            <button class="btn btn-success text-white btn-circle btn" type="button">
                                                <i class="fas fa-phone"></i>
                                            </button>
                                            <button class="btn btn-info btn-circle btn" type="button">
                                                <i class="far fa-comments text-white"></i>
                                            </button>
                                        </div>
                                        <a href="javascript:void(0)" class="d-flex align-items-center">
                                            <img src="@if (us.avatar != null) { Url.Content(us.avatar); } else { Url.Content(" ");}" alt="user-img" class="img-circle">
                                            <div class="ms-2">
                                                <span class="text-dark">
                                                    @us.UserName<small class="d-block text-success d-block">online</small>
                                                </span>
                                            </div>
                                        </a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->

    </div>
}
