@model Tech_News.Models.DAO.LeftContentViewModel
<div class="col-md-4">
    <div class="widget">
        <div class="widget_title widget_black">
            <h2><a href="#">Popular News</a></h2>
        </div>
        @foreach (var item in Model.popularArticle)
        {
            <div class="media">
                <div class="media-left">
                    <a href="@Url.Action("Index","NewDetails",new { id = item.id})"><img class="media-object" src="@Url.Content(item.article_thumbnail)" alt="Generic placeholder image"></a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@Url.Action("Index","NewDetails",new { id = item.id})" target="_self">@item.article_title</a>
                    </h3> <span class="media-date"><a href="#">@item.update_at</a>,  by: <a href="#">@item.author.author_name</a></span>

                    <div class="widget_article_social">
                        <span>
                            <a href="#" target="_self"> <i class="fa fa-share-alt"></i>@item.view.total_view</a> Views
                        </span>
                        <span>
                            <a href="#" target="_self"><i class="fa fa-comments-o"></i>@item.comments.Count()</a> Comments
                        </span>
                    </div>
                </div>
            </div>
           
        }
    </div>
    <!-- Popular News -->
